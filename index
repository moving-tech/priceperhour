<body>
    <div class="form-container">
        <div class="form-header">
            <div class="logo">
                <img src="{{ $json.logoURL }}" alt="Company Logo">
            </div>
            <h1 class="form-title">{{ $json.companyName }}</h1>
            <p class="form-subtitle">Quote Confirmation - Quote #{{ $json.quoteNumber }}</p>
        </div>

        <div class="form-body">
            <div class="quote-summary">
                <h3>Calculated Quote</h3>
                <div class="price-display">${{ $json.afterTax }}</div>
                <div class="hours-display">Total Time: {{ $json.totalHours }} hours</div>
            </div>

            <div class="form-section">
                <div class="section-title">
                    Ready to send this quote to the customer?
                </div>

                <div class="button-group">
                    <button type="button" class="confirm-btn" onclick="confirmQuote()">
                        ✅ Confirm & Send
                    </button>
                    <button type="button" class="modify-btn" onclick="showModification()">
                        ✏️ Add Time
                    </button>
                </div>

                <div class="modification-section" id="modificationSection">
                    <div class="form-group">
                        <label for="additionalMinutes">How many additional minutes would you like to add?</label>
                        <input type="number" 
                               id="additionalMinutes" 
                               name="additionalMinutes" 
                               placeholder="Enter minutes to add" 
                               min="0" 
                               step="1">
                    </div>
                    <button type="button" class="submit-modification-btn" onclick="submitModification()">
                        Update Quote & Send
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showModification() {
            document.getElementById('modificationSection').classList.add('show');
            document.getElementById('additionalMinutes').focus();
        }

        function confirmQuote() {
            const confirmData = {
                action: "confirm",
                quoteNumber: "{{ $json.quoteNumber }}",
                companyName: "{{ $json.companyName }}",
                afterTax: "{{ $json.afterTax }}",
                totalHours: "{{ $json.totalHours }}",
                additionalMinutes: 0,
                timestamp: new Date().toISOString()
            };
            
            submitToWebhook(confirmData, "Quote confirmed and sent to customer!");
        }

        function submitModification() {
            const additionalMinutes = parseInt(document.getElementById('additionalMinutes').value) || 0;
            
            if (additionalMinutes <= 0) {
                alert('Please enter a valid number of minutes to add.');
                return;
            }

            const modifyData = {
                action: "modify",
                quoteNumber: "{{ $json.quoteNumber }}",
                ownerName: "{{ $json.ownerName }}", 
                companyName: "{{ $json.companyName }}",
                afterTax: "{{ $json.afterTax }}",
                totalHours: "{{ $json.totalHours }}",
                additionalMinutes: additionalMinutes,
                timestamp: new Date().toISOString()
            };
            
            submitToWebhook(modifyData, `Quote updated with ${additionalMinutes} additional minutes and sent to customer!`);
        }

        function submitToWebhook(data, successMessage) {
            fetch('https://n8n-movers-project-n8n.5gwahg.easypanel.host/webhook/ad1e4a90-b38e-4c7e-b4e6-fcfee2865636', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => {
                if (response.ok) {
                    alert('✅ ' + successMessage);
                    // Disable all buttons after successful submission
                    document.querySelectorAll('button').forEach(btn => btn.disabled = true);
                } else {
                    throw new Error('Network response was not ok');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error submitting response. Please try again.');
                console.log('Form Data:', data);
            });
        }
    </script>
</body>
