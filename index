    <script>
        // Form submission handler
        document.getElementById('movingQuoteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                messageID: "198ce273430faac4"
                quoteNumber: "Q-0030",
                companyName: "Just Move Vancouver",
                pricePerHour: parseFloat(document.getElementById('pricePerHour').value),
                garbageDisposal: parseInt(document.getElementById('garbageDisposal').value),
                extraTravelTime: parseInt(document.getElementById('extraTravelTime').value) || 0,
                pianoTime: parseInt(document.getElementById('pianoTime').value),
                timestamp: new Date().toISOString()
            };
            
            // Send to webhook
            fetch('https://n8n-movers-project-n8n.5gwahg.easypanel.host/webhook/d77559ed-cf8b-468b-80c2-f83c30bb3a38', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            })
            .then(response => {
                if (response.ok) {
                    alert('âœ… Quote submitted successfully!\n\nðŸ“± You will receive another Slack notification in a few seconds where you can confirm or change the price before it gets sent to the customer.');
                } else {
                    throw new Error('Network response was not ok');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error submitting quote. Please try again.');
                // Fallback: log data to console
                console.log('Form Data:', formData);
            });
        });

        // Add subtle animations
        document.querySelectorAll('input, select').forEach(element => {
            element.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px)';
            });
            
            element.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0)';
            });
        });
    </script>
